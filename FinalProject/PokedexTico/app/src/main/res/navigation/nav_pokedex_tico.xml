<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_pokedex_tico"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        tools:layout="@layout/fragment_login_user"
        android:name="com.djcerdas.pokedextico.fragment.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/LogintoOldMenu"
            app:destination="@id/oldMenuPokedex" />
    </fragment>

    <fragment
        android:id="@+id/oldMenuPokedex"
        android:name="com.djcerdas.pokedextico.fragment.OldMenuPokedex"
        tools:layout="@layout/old_menu_pokedex"
        android:label="MenuPokedex">
        <argument
            android:name="trainerName"
            app:argType="string" />
        <action
            android:id="@+id/old_menuPokedex_to_recycleView"
            app:destination="@id/recycleView" />
        <action
            android:id="@+id/old_menuPokedex_to_nullDisplayFragment"
            app:destination="@id/nullDisplayFragment" />
        <action
            android:id="@+id/old_menuPokedex_to_pokemonTrainerInfo"
            app:destination="@id/pokemonTrainerInfo" />
    </fragment>

    <fragment
        android:id="@+id/recycleView"
        tools:layout="@layout/recycler_view"
        android:name="com.djcerdas.pokedextico.fragment.RecycleViewFragment"
        android:label="recycleView">
        <action
            android:id="@+id/recycleView_to_showPokemonFragment"
            app:destination="@id/showPokemonFragment" />
    </fragment>


    <fragment
        android:id="@+id/nullDisplayFragment"
        tools:layout="@layout/fragment_null_display"
        android:name="com.djcerdas.pokedextico.fragment.NullDisplayFragment"
        android:label="NullDisplayFragment" />

    <fragment
        android:id="@+id/showPokemonFragment"
        tools:layout="@layout/fragment_show_pokemon"
        android:name="com.djcerdas.pokedextico.fragment.ShowPokemonFragment"
        android:label="showPokemonFragment">
        <argument
            android:name="pokemonName"
            app:argType="string" />
        <argument
            android:name="pokemonID"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/pokemonTrainerInfo"
        tools:layout="@layout/fragment_trainer_info"
        android:name="com.djcerdas.pokedextico.fragment.PokemonTrainerInfo"
        android:label="PokemonTrainerInfo">
        <argument android:name="trainerName" />
    </fragment>
</navigation>